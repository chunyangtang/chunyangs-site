---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import { Github, ExternalLink, Layers, Code2, Globe } from 'lucide-react';
import { siteProfile } from '../../../data/site';

import projectEyeClinic from '../../assets/projects/AIEyeClinic.png';
import projectPersonalWebsite from '../../assets/projects/PersonalWebsite.png';
import projectMacSoftware from '../../assets/projects/macOSSoftware.jpeg';

interface Project {
  title: string;
  description: string;
  tech: string[];
  category: string;
  repo: string | null;
  demo: string | null;
  website: string | null;
  image: ImageMetadata;
  status: 'Active' | 'Completed' | 'Archived';
}

const projects: Project[] = [
  {
    title: "Clinical AI Annotation & Deployment Platform",
    description: `A full-stack system for medical image annotation, AI inference visualization, and physician feedback collection. 
    
Built to support clinical research workflows and deployed for internal testing at Beijing Tsinghua Changgung Hospital.`,
    tech: ["Python", "Tkinter", "Flask", "FastAPI", "React", "Tailwind CSS"],
    category: "Full-Stack Development",
    repo: "https://github.com/chunyangtang/ImageLabeller",
    demo: null,
    website: null,
    image: projectEyeClinic,
    status: "Active"
  },
  {
    title: "Personal Website",
    description: "The website you are looking at right now. A fully custom designed personal website built with Astro and Tailwind CSS.",
    tech: ["Astro", "TypeScript", "Tailwind", "Vercel"],
    category: "Web Development",
    repo: "https://github.com/chunyangtang/chunyangs-site",
    demo: null,
    website: null,
    image: projectPersonalWebsite,
    status: "Completed"
  },
  {
    title: "Awesome Productivity Software for macOS",
    description: `macOS is well known for its efficiency, driven by both native workflows and community-built tools.

Here, we have compiled a collection of macOS productivity tools on Notion, with notes on open-source status, pricing, permissions, and hands-on experience.`,
    tech: ["macOS", "Productivity", "Software", "Collection"],
    category: "Software Collection",
    repo: null,
    demo: null,
    website: "https://chunyangtang.notion.site/macOS-c80a2a255d9f48fc8a05759aee9b9dbb?pvs=74",
    image: projectMacSoftware,
    status: "Completed"
  }
];

// Helper to pick colors based on status
const getStatusColor = (status: string) => {
    switch(status) {
        case 'Active': return 'bg-green-100 text-green-700 border-green-200';
        case 'Completed': return 'bg-blue-100 text-blue-700 border-blue-200';
        case 'Archived': return 'bg-gray-100 text-gray-600 border-gray-200';
        default: return 'bg-gray-100 text-gray-600';
    }
};

const isExternalUrl = (value: string | null | undefined) =>
  typeof value === 'string' && /^https?:\/\//.test(value);
---

<Layout title="Projects | Chunyang Tang">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    
    <header class="mb-16 max-w-2xl">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-gray-100 mb-4">
            Things I <span class="text-blue-600 dark:text-blue-400">Build</span>
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
            From research prototypes to web tools and curated resources, this page collects the systems and ideas I've brought to life.
        </p>
    </header>

    <div class="space-y-20">
        {projects.map((project, index) => (
            <div class="group relative grid md:grid-cols-12 gap-8 items-center">
                
                <div class={`md:col-span-7 relative rounded-2xl overflow-hidden border border-gray-100 dark:border-gray-800 shadow-2xl shadow-gray-200/50 dark:shadow-black/50 ${index % 2 === 0 ? 'md:order-1' : 'md:order-2'}`}>
                    <div class="h-8 bg-gray-50 dark:bg-gray-900 border-b border-gray-100 dark:border-gray-800 flex items-center px-4 gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-400/80"></div>
                        <div class="w-3 h-3 rounded-full bg-amber-400/80"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400/80"></div>
                    </div>
                    
                    <div class="relative bg-gray-50 dark:bg-gray-800 aspect-video overflow-hidden">
                        {project.image ? (
                             <Image 
                                src={project.image} 
                                alt={project.title} 
                                width={800} 
                                height={450}
                                class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700 ease-out" 
                             />
                        ) : (
                            // Fallback if no image (Gradient)
                            <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-700 flex items-center justify-center">
                                <Code2 class="text-gray-300 dark:text-gray-600 w-16 h-16" />
                            </div>
                        )}
                        
                        <div class="absolute inset-0 bg-gray-900/0 group-hover:bg-gray-900/5 transition-colors duration-500"></div>
                    </div>
                </div>

                <div class={`md:col-span-5 flex flex-col justify-center ${index % 2 === 0 ? 'md:order-2' : 'md:order-1'}`}>
                    
                    <div class="flex items-center gap-3 mb-4">
                        <span class={`px-2 py-0.5 text-xs font-bold uppercase tracking-wide rounded-full border ${getStatusColor(project.status)} dark:bg-gray-800 dark:text-gray-300 dark:border-gray-700`}>
                            {project.status}
                        </span>
                        <span class="text-sm font-medium text-gray-500 dark:text-gray-400 flex items-center gap-1">
                            <Layers size={14} /> {project.category}
                        </span>
                    </div>

                    <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        {project.title}
                    </h2>
                    
                    <p class="text-gray-600 dark:text-gray-400 leading-relaxed whitespace-pre-line mb-6">
                        {project.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-8">
                        {project.tech.map(t => (
                            <span class="px-2.5 py-1 bg-gray-50 dark:bg-gray-800 border border-gray-100 dark:border-gray-700 text-gray-600 dark:text-gray-300 text-xs font-medium rounded-md">
                                {t}
                            </span>
                        ))}
                    </div>

                    {(isExternalUrl(project.repo) || isExternalUrl(project.demo) || isExternalUrl(project.website)) && (
                        <div class="flex gap-4">
                            {isExternalUrl(project.repo) && (
                                <a href={project.repo} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-4 py-2 bg-gray-900 dark:bg-white text-gray-100 dark:text-black rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-all hover:-translate-y-0.5 shadow-lg shadow-gray-900/20 dark:shadow-white/10 text-sm font-medium">
                                    <Github size={18} />
                                    View Code
                                </a>
                            )}
                            {isExternalUrl(project.demo) && (
                                <a href={project.demo} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all hover:-translate-y-0.5 text-sm font-medium">
                                    <ExternalLink size={18} />
                                    Live Demo
                                </a>
                            )}
                            {isExternalUrl(project.website) && (
                                <a href={project.website} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-900 text-gray-700 dark:text-gray-300 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-800 transition-all hover:-translate-y-0.5 text-sm font-medium">
                                    <Globe size={18} />
                                    Website
                                </a>
                            )}
                        </div>
                    )}

                </div>
            </div>
        ))}
    </div>

    <div class="mt-24 p-8 bg-gray-50 dark:bg-gray-900/50 rounded-2xl border border-gray-100 dark:border-gray-800 text-center">
        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-2">Have a project in mind?</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
            I'm always open to thoughtful conversations â€” whether about research, interdisciplinary ideas, or interesting projects worth building.
        </p>
        <a href={`mailto:${siteProfile.email}`} class="inline-flex items-center text-blue-600 dark:text-blue-400 font-medium hover:underline decoration-blue-200 dark:decoration-blue-800 decoration-2 underline-offset-4">
            Reach out via email &rarr;
        </a>
    </div>

  </div>
</Layout>
