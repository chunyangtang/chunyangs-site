---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Github, ExternalLink, Box, Layers, Cpu, Code2 } from 'lucide-react';

// Import project screenshots (you'll need to add these to src/assets)
// If you don't have images yet, use a colorful gradient placeholder div
import projectScreen1 from '../../assets/projects/placeholder-1.png'; 
import projectScreen2 from '../../assets/projects/placeholder-2.png';

const projects = [
  {
    title: "RetiAR: Optical Neural Network Sim",
    description: "A Python framework for simulating diffractive optical neural networks (DONNs) with support for hardware-aware training. Built to model thermal noise and phase errors in analog chips.",
    tech: ["Python", "PyTorch", "CUDA", "Optics"],
    category: "Simulation Tool",
    repo: "https://github.com/yourusername/retiar",
    demo: "https://retiar.demo.com",
    image: projectScreen1,
    status: "Active"
  },
  {
    title: "Personal Academic Portfolio",
    description: "The website you are looking at right now. A high-performance, accessible academic portfolio built with Astro and Tailwind CSS. Features LaTeX support for math blogs and auto-optimized images.",
    tech: ["Astro", "TypeScript", "Tailwind", "Vercel"],
    category: "Web Development",
    repo: "https://github.com/yourusername/portfolio",
    demo: null, // Some projects might not have a live demo
    image: projectScreen2,
    status: "Completed"
  },
  {
    title: "Lens-Free Microscopy Reconstructor",
    description: "An end-to-end deep learning pipeline to reconstruct high-resolution microscopy images from holographic sensor data. Achieves 40% better SSIM than traditional back-propagation.",
    tech: ["TensorFlow", "OpenCV", "Docker"],
    category: "Computer Vision",
    repo: "#",
    demo: "#",
    image: projectScreen1, // Reusing placeholder
    status: "Archived"
  }
];

// Helper to pick colors based on status
const getStatusColor = (status: string) => {
    switch(status) {
        case 'Active': return 'bg-green-100 text-green-700 border-green-200';
        case 'Completed': return 'bg-blue-100 text-blue-700 border-blue-200';
        case 'Archived': return 'bg-gray-100 text-gray-600 border-gray-200';
        default: return 'bg-gray-100 text-gray-600';
    }
};
---

<Layout title="Projects | Chunyang Tang">
  <div class="max-w-6xl mx-auto px-6 py-12">
    
    <header class="mb-16 max-w-2xl">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 mb-4">
            Lab & <span class="text-blue-600">Open Source</span>
        </h1>
        <p class="text-lg text-gray-600 leading-relaxed">
            A collection of tools, simulations, and experiments I've built. 
            ranging from optical computing frameworks to web applications.
        </p>
    </header>

    <div class="space-y-20">
        {projects.map((project, index) => (
            <div class="group relative grid md:grid-cols-12 gap-8 items-center">
                
                <div class={`md:col-span-7 relative rounded-2xl overflow-hidden border border-gray-100 shadow-2xl shadow-gray-200/50 ${index % 2 === 0 ? 'md:order-1' : 'md:order-2'}`}>
                    <div class="h-8 bg-gray-50 border-b border-gray-100 flex items-center px-4 gap-2">
                        <div class="w-3 h-3 rounded-full bg-red-400/80"></div>
                        <div class="w-3 h-3 rounded-full bg-amber-400/80"></div>
                        <div class="w-3 h-3 rounded-full bg-green-400/80"></div>
                    </div>
                    
                    <div class="relative bg-gray-50 aspect-video overflow-hidden">
                        {project.image ? (
                             <Image 
                                src={project.image} 
                                alt={project.title} 
                                width={800} 
                                height={450}
                                class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-700 ease-out" 
                             />
                        ) : (
                            // Fallback if no image (Gradient)
                            <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                                <Code2 class="text-gray-300 w-16 h-16" />
                            </div>
                        )}
                        
                        <div class="absolute inset-0 bg-gray-900/0 group-hover:bg-gray-900/5 transition-colors duration-500"></div>
                    </div>
                </div>

                <div class={`md:col-span-5 flex flex-col justify-center ${index % 2 === 0 ? 'md:order-2' : 'md:order-1'}`}>
                    
                    <div class="flex items-center gap-3 mb-4">
                        <span class={`px-2 py-0.5 text-xs font-bold uppercase tracking-wide rounded-full border ${getStatusColor(project.status)}`}>
                            {project.status}
                        </span>
                        <span class="text-sm font-medium text-gray-500 flex items-center gap-1">
                            <Layers size={14} /> {project.category}
                        </span>
                    </div>

                    <h2 class="text-3xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors">
                        {project.title}
                    </h2>
                    
                    <p class="text-gray-600 leading-relaxed mb-6">
                        {project.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-8">
                        {project.tech.map(t => (
                            <span class="px-2.5 py-1 bg-gray-50 border border-gray-100 text-gray-600 text-xs font-medium rounded-md">
                                {t}
                            </span>
                        ))}
                    </div>

                    <div class="flex gap-4">
                        {project.repo && (
                            <a href={project.repo} target="_blank" class="flex items-center gap-2 px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-all hover:-translate-y-0.5 shadow-lg shadow-gray-900/20 text-sm font-medium">
                                <Github size={18} />
                                View Code
                            </a>
                        )}
                        {project.demo && (
                            <a href={project.demo} target="_blank" class="flex items-center gap-2 px-4 py-2 bg-white text-gray-700 border border-gray-200 rounded-lg hover:bg-gray-50 transition-all hover:-translate-y-0.5 text-sm font-medium">
                                <ExternalLink size={18} />
                                Live Demo
                            </a>
                        )}
                    </div>

                </div>
            </div>
        ))}
    </div>

    <div class="mt-24 p-8 bg-gray-50 rounded-2xl border border-gray-100 text-center">
        <h3 class="text-xl font-bold text-gray-900 mb-2">Have a project in mind?</h3>
        <p class="text-gray-600 mb-6 max-w-md mx-auto">
            I'm always open to discussing new ideas in optical computing and AI.
        </p>
        <a href="mailto:email@edu.cn" class="inline-flex items-center text-blue-600 font-medium hover:underline decoration-blue-200 decoration-2 underline-offset-4">
            Start a collaboration &rarr;
        </a>
    </div>

  </div>
</Layout>