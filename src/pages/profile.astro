---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import { Download, Mail, Github, Linkedin, ExternalLink, GraduationCap, Award } from 'lucide-react';
import profileImage from '../assets/profile.jpg';

import { education, publications, myName } from '../../data/cv';
---

<Layout title="Profile | Chunyang">
  <div class="max-w-6xl mx-auto px-4 py-12">
    
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12">
      
      <aside class="md:col-span-4 lg:col-span-3">
        <div class="sticky top-24 space-y-8">
          
          <div class="relative group">
            <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
            <div class="relative aspect-square overflow-hidden rounded-2xl bg-gray-100 ring-1 ring-gray-900/5">
                <Image 
                    src={profileImage} 
                    alt="Chunyang Profile" 
                    width={400} 
                    height={400} 
                    class="object-cover w-full h-full"
                />
            </div>
          </div>

          <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-100">Chunyang Tang</h1>
            <p class="text-lg text-gray-600 dark:text-gray-400 mt-1">PhD Candidate</p>
            <p class="text-sm text-gray-500 mt-1">Tsinghua University</p>
            
            <div class="flex gap-4 mt-6">
                <a href="mailto:tangcy21@mails.tsinghua.edu.cn" class="text-gray-400 hover:text-gray-900 transition-colors">
                    <Mail size={22} />
                </a>
                <a href="https://github.com/chunyangtang" class="text-gray-400 hover:text-gray-900 transition-colors">
                    <Github size={22} />
                </a>
                <a href="https://www.linkedin.com/in/chunyang-tang-12a34634a/" class="text-gray-400 hover:text-blue-600 transition-colors">
                    <Linkedin size={22} />
                </a>
                 <a href="#" class="text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors" title="Google Scholar">
                    <GraduationCap size={22} />
                </a>
            </div>
          </div>

          <a 
            href="#" 
            class="flex items-center justify-center w-full gap-2 px-4 py-3 bg-gray-900 dark:bg-white text-gray-100 dark:text-black rounded-xl hover:bg-gray-800 dark:hover:bg-gray-200 transition-all hover:shadow-lg hover:-translate-y-0.5"
          >
            <Download size={18} />
            <span class="font-medium"><del>Download CV</del></span>
          </a>

        </div>
      </aside>


<main class="md:col-span-8 lg:col-span-8 space-y-12">
        
        <section class="max-w-none prose prose-slate prose-lg">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-3">
             About Me
          </h2>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed">
            I am a PhD student at <a href="https://www.tsinghua.edu.cn/en/" class="text-blue-600 font-medium hover:underline decoration-blue-200 decoration-2 underline-offset-2">Tsinghua University</a>, advised by [Professor Name]. 
            My research lies at the intersection of <strong class="text-gray-900 dark:text-gray-100 font-semibold">Optical Computing</strong> and <strong class="text-gray-900 dark:text-gray-100 font-semibold">Machine Learning</strong>.
          </p>
          <p class="text-gray-600 dark:text-gray-300 leading-relaxed mt-4">
            Currently, I am exploring how to implement robust loss functions on analog optical chips to accelerate training efficiency. 
            Before this, I worked on nanophotonics and gradient-free optimization methods.
          </p>
        </section>

        <hr class="border-gray-100 dark:border-gray-800" />

<section>
             <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 flex items-center gap-3">
                Education
            </h2>
            <div class="space-y-8">
                {education.map((edu) => (
                    <div class="flex flex-col sm:flex-row gap-2 sm:gap-6 group">
                        <div class="min-w-[120px] text-gray-400 font-mono text-sm pt-1 shrink-0 group-hover:text-blue-500 transition-colors">
                            {edu.year}
                        </div>
                        <div>
                            <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{edu.school}</h3>
                            <div class="text-gray-700 dark:text-gray-300 font-medium mt-1">{edu.degree}</div>
                            
                            <div class="text-sm mt-0.5">
                                {edu.departmentUrl ? (
                                    <a 
                                        href={edu.departmentUrl} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="text-gray-500 hover:text-blue-600 transition-colors flex items-center gap-1 w-fit"
                                    >
                                        {edu.department}
                                        <ExternalLink size={12} class="inline-block opacity-50" />
                                    </a>
                                ) : (
                                    <span class="text-gray-500">{edu.department}</span>
                                )}
                            </div>
                            
                            <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mt-2 text-justify">
                                {edu.details}
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <hr class="border-gray-100 dark:border-gray-800" />

        <section>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-8 flex items-center gap-3">
                Publications
            </h2>
            
            <div class="space-y-8">
                {publications.map((pub) => (
                    <div class="group flex flex-col sm:flex-row gap-6 hover:bg-gray-50/50 dark:hover:bg-gray-900/50 p-4 -mx-4 rounded-xl transition-colors border border-transparent hover:border-gray-100 dark:hover:border-gray-800">
                        
                        <div class="sm:w-32 sm:shrink-0 relative rounded-lg overflow-hidden border border-gray-100 dark:border-gray-800 shadow-sm">
                             <Image 
                                src={pub.image} 
                                alt={pub.title} 
                                width={300} 
                                height={200}
                                class="object-cover w-full h-32 sm:h-24 group-hover:scale-105 transition-transform duration-500" 
                             />
                        </div>

                        <div class="flex-1 min-w-0"> <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 leading-tight mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                                <a href={pub.links.pdf} class="hover:underline decoration-blue-200 dark:decoration-blue-800 decoration-2 underline-offset-2">
                                    {pub.title}
                                </a>
                            </h3>
                            
                            <p class="text-gray-600 text-sm mb-3 leading-relaxed">
                                {pub.authors.split(myName).map((part, index, array) => (
                                    <>
                                        {part}
                                        {index < array.length - 1 ? (
                                            <strong class="text-gray-900 dark:text-gray-100 font-bold">{myName}</strong>
                                        ) : null}
                                    </>
                                ))}
                            </p>
                            
                            <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm mt-auto">
                                <span class={`px-2.5 py-0.5 rounded-md text-xs font-bold tracking-wide uppercase border ${
                                    pub.type === 'Conference' ? 'bg-blue-50 dark:bg-blue-950/30 text-blue-700 dark:text-blue-300 border-blue-100 dark:border-blue-900/30' : 
                                    'bg-purple-50 dark:bg-purple-950/30 text-purple-700 dark:text-purple-300 border-purple-100 dark:border-purple-900/30'
                                }`}>
                                    {pub.venue}
                                </span>

                                <div class="flex gap-3 text-gray-500 font-medium">
                                    {pub.links.pdf && (
                                        <a href={pub.links.pdf} class="hover:text-gray-900 dark:hover:text-gray-100 hover:underline flex items-center gap-1 transition-colors">
                                            PDF
                                        </a>
                                    )}
                                    {pub.links.code && (
                                        <a href={pub.links.code} class="hover:text-gray-900 dark:hover:text-gray-100 hover:underline flex items-center gap-1 transition-colors">
                                            Code
                                        </a>
                                    )}
                                    {pub.links.website && (
                                        <a href={pub.links.website} class="hover:text-gray-900 dark:hover:text-gray-100 hover:underline flex items-center gap-1 transition-colors">
                                            Website
                                        </a>
                                    )}
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </section>

      </main>
    </div>
  </div>
</Layout>
