---
import { getCollection } from 'astro:content';
import { ArrowRight, BookOpen, GraduationCap, Github, Mail, Linkedin, MapPin } from 'lucide-react';
import { siteProfile } from '../../data/site';

const getPostSlug = (post: { id: string; slug?: string }) =>
  post.slug && post.slug.length > 0
    ? post.slug
    : post.id
        .replace(/\/index\.(md|mdx)$/, '')
        .replace(/\/index$/, '')
        .replace(/\.(md|mdx)$/, '');

const latestPost = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0] ?? null;

const latestPostHref = latestPost
  ? `/blog/${getPostSlug(latestPost)}`
  : '/blog';
const latestPostTitle = latestPost?.data.title ?? 'No posts yet';
const latestPostDate = latestPost
  ? latestPost.data.pubDate.toLocaleDateString(undefined, {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  : 'Coming soon';

const THIRTY_DAYS_MS = 30 * 24 * 60 * 60 * 1000;
const isLatestPostNew = latestPost
  ? Date.now() - latestPost.data.pubDate.getTime() <= THIRTY_DAYS_MS
  : false;
---

<div class="grid grid-cols-1 gap-4 md:grid-cols-4 md:auto-rows-[240px] xl:auto-rows-[190px]">

  <div class="md:col-span-2 md:row-span-2 rounded-3xl bg-gray-900 dark:bg-black text-gray-100 border border-gray-800 dark:border-gray-700 p-6 md:p-8 flex flex-col justify-between relative overflow-hidden group">
    <div class="absolute top-0 right-0 w-64 h-64 bg-blue-600 rounded-full blur-[100px] opacity-20 -mr-16 -mt-16 transition-opacity group-hover:opacity-30"></div>
    
    <div class="z-10">
      <div class="flex items-center gap-3 mb-4">
         <!-- <span class="px-3 py-1 bg-white/10 rounded-full text-xs font-medium backdrop-blur-sm text-blue-200 border border-white/10">
           Open for Collaboration
         </span> -->
      </div>
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight mb-2">{siteProfile.name}</h1>
      <p class="text-lg md:text-xl text-gray-300 font-light mb-5 md:mb-6">{siteProfile.role}</p>
      <p class="text-gray-400 text-sm leading-relaxed max-w-sm">
        {siteProfile.bio}
      </p>
    </div>

    <div class="z-10 flex gap-4 mt-auto">
        <a href={`mailto:${siteProfile.email}`} aria-label="Send email" class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors">
            <Mail size={20} />
        </a>
        <a href={siteProfile.githubUrl} target="_blank" rel="noopener noreferrer" aria-label="GitHub profile" class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors">
            <Github size={20} />
        </a>
         <a href={siteProfile.linkedinUrl} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn profile" class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors">
            <Linkedin size={20} />
        </a>
        <a href={siteProfile.googleScholarUrl} target="_blank" rel="noopener noreferrer" aria-label="Google Scholar profile" class="p-2 bg-white/10 rounded-full hover:bg-white/20 transition-colors">
            <GraduationCap size={20} />
        </a>
    </div>
  </div>

  <a href="/profile" class="md:col-span-1 md:row-span-2 rounded-3xl bg-white dark:bg-gray-800 border border-gray-100 dark:border-gray-700 p-6 flex flex-col relative group hover:border-blue-500/50 dark:hover:border-blue-400/50 transition-all hover:shadow-lg hover:-translate-y-1">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gray-50/50 dark:to-gray-900/50 rounded-3xl"></div>
    
    <div class="relative z-10 flex-1">
        <div class="w-10 h-10 bg-blue-50 dark:bg-blue-900/30 rounded-xl flex items-center justify-center text-blue-600 dark:text-blue-400 mb-4 group-hover:scale-110 transition-transform">
            <GraduationCap size={20} />
        </div>
        <h3 class="text-lg font-bold mb-2 dark:text-gray-100">Research</h3>
        <ul class="space-y-2 text-sm text-gray-500 dark:text-gray-400">
            <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-blue-400 rounded-full"></span>
                AI for Medicine
            </li>
            <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-blue-400 rounded-full"></span>
                Medical Foundation Models
            </li>
            <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-blue-400 rounded-full"></span>
                Reinforcement Learning
            </li>
            <li class="flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-blue-400 rounded-full"></span>
                Diffractive Neural Networks
            </li>
        </ul>
    </div>
    
    <div class="relative z-10 mt-4 flex items-center text-blue-600 dark:text-blue-400 text-sm font-medium">
        Academic Profile <ArrowRight size={16} class="ml-1 group-hover:translate-x-1 transition-transform" />
    </div>
  </a>

  <a href={latestPostHref} class="md:col-span-1 md:row-span-1 rounded-3xl bg-indigo-50 dark:bg-indigo-950/30 border border-indigo-100 dark:border-indigo-900/50 p-6 flex flex-col justify-between group hover:bg-indigo-100 dark:hover:bg-indigo-900/40 transition-colors">
      <div class="flex justify-between items-start">
        <BookOpen size={24} class="text-indigo-600 dark:text-indigo-400" />
        {isLatestPostNew && (
          <span class="text-xs font-bold bg-white dark:bg-indigo-900 px-2 py-1 rounded text-indigo-600 dark:text-indigo-300">NEW</span>
        )}
      </div>
      <div>
           <h3 class="font-bold text-gray-800 dark:text-gray-200 text-sm mb-1 line-clamp-2">{latestPostTitle}</h3>
          <p class="text-xs text-gray-500 dark:text-gray-400">{latestPostDate}</p>
      </div>
  </a>

  <div class="md:col-span-1 md:row-span-1 rounded-3xl bg-emerald-50 dark:bg-emerald-950/30 border border-emerald-100 dark:border-emerald-900/50 p-6 flex flex-col justify-between">
      <MapPin size={24} class="text-emerald-600 dark:text-emerald-400" />
      <div>
           <h3 class="font-bold text-gray-800 dark:text-gray-200 text-lg">Beijing, CN</h3>
          <div class="flex items-center gap-2 mt-1">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
              </span>
               <p class="text-xs text-emerald-700 dark:text-emerald-300 font-medium">Deep in research mode</p>
          </div>
      </div>
  </div>

</div>
